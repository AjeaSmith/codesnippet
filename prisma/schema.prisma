generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model CodeSnippet {
  id     String      @id @default(auto()) @map("_id") @db.ObjectId
  title  String
  code   String

  folder Folder?  @relation(fields: [folderId], references: [id])
  folderId String? @db.ObjectId
}

model Folder {
  id       String        @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  snippets CodeSnippet[]
}